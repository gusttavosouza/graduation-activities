programa
{
	funcao inicio()
	{
		inteiro numero

		escreva("Informe um numero: ")
		leia(numero)
	

		se(numero > 0){
			escreva(numero ," Positivo")
		}senao se(numero < 0){
			escreva(numero," negativo")		
		}senao{
			escreva("é ZERO")
		}
	}
}
