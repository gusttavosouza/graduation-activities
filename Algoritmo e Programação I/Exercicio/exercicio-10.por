programa
{
	funcao inicio()
	{
		inteiro numero, v1, v2,v3,v4
		
		escreva("Informe o numero : \n")
		leia(numero)

		v1 = numero % 2
		v2 = (numero / 2) % 2
		v3 = ((numero / 2) /2) %2
		v4 = (((numero / 2) /2) /2)%2

		escreva(v4,v3,v2,v1)

		
	}
}
